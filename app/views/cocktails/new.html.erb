<body style="background: black">

  <h1 class="ml-5 mt-5 mr-5" style="color:white">Add a new Cocktail</h1>

  <div class="ml-5 mb-5" style="width: 600px; color:white">

  <%= simple_form_for [ @cocktail ],

    wrapper: :floating_labels_form,
    wrapper_mappings: {
      select:        :floating_labels_select
    } do |f| %>

    <%= f.error_notification %>

    <%= f.input :name, label: false %>
    <br>
    <%= f.input :photo, as: :file, label: "Photo" %>

    <%=%>


    <%= f.button :submit, class: "btn-success" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary"%>
    <%= link_to "back to front page", :back, {:class => "btn-outline-secondary ml-2"} %>
  <% end %>

</div>